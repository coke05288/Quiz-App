<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:gravity="center"
        android:padding="24dp"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/quiz_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_number"
        android:layout_weight="0.05"
        android:gravity="bottom"
        android:padding="24dp"
        android:textColor="#262626"
        android:textSize="14sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:weightSum="2"
        android:layout_weight="0.05"
        android:padding="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/o_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/o_button"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_o"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/x_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_button"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_x"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>